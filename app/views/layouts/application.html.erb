<!DOCTYPE html>
<html>
<head>
  <title>Trip Calculator</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Navigation Toolbar -->

<nav class="navbar navbar-default">
  <div class="container-fluid">

    <!-- Title and toggle get grouped for better mobile display -->

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu">

        <!-- Hamburger Menu for mobile displays -->

        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Trip Calculator</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->

    <div class="collapse navbar-collapse" id="menu">
      <ul class="nav navbar-nav navbar-right">

        <!-- When the user is logged in show username and logout-->

        <% if current_user %>

          <!-- User sign in name displayed here -->

          <li class="vcenter">Signed in as: <strong><%= current_user.email %></strong></li>
        
          <!-- Logout Link -->

          <li><%= link_to "Logout", logout_path %></li>

        <!-- When the user is logged out or doesn't have an account show sign up -->
      
        <% else %>

          <li><%= link_to "Sign Up", signup_path %></li>
          <li><%= link_to "Sign In", signin_path %></li>

        <% end %>

      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!-- Error Message Alert -->

<% flash.each do |key, value| %>
  <div class='alert alert-<%= key %>' role='alert'>
    <%= value %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
