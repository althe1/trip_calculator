<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-3">

    <!-- Heading -->

    <h1>Add Car</h1>
      
      <!-- Form to Add a new Car -->

      <%= form_for [@user, @car] do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter name"%>
        </div>
        <div class="form-group">
          <%= f.text_field :odometer, class: "form-control", placeholder: "Enter mileage"%> 
        </div>
        <div class="form-group">

          <!-- Button to create car and a button to go back to Car list -->
          
          <%= f.submit 'Create Car', class: "btn btn-success"%> <%= link_to "Back to Cars", user_cars_path(params[:user_id]), class: "btn btn-default" %>
        </div>
      <% end %>

    </div>
  </div>
</div>