<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <!-- Heading -->

     <h1>Sign Up</h1>

          <!-- Form to add new User -->

          <%= form_for @user do |f| %>
            
            <!-- Name field -->

            <div class="form-group">
              <label>Name</label>
              <%= f.text_field :name, class: "form-control", placeholder: "Enter name"%>

              <!-- Error message if name isn't valid -->

              <% if @user.errors.messages[:name].any? %>
                <div class='alert alert-danger' role='alert'>>
                  <% @user.errors.messages[:name].each do |message| %>
                    <%= message %>
                  <% end %>
                </div>
              <% end %>

            </div>  

            <!-- Email Field -->

            <div class="form-group">
              <label>Email address</label>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter email"%>

              <!-- Error message if email isn't valid -->

              <% if @user.errors.messages[:email].any? %>
                <div class='alert alert-danger' role='alert'>>
                  <% @user.errors.messages[:email].each do |message| %>
                    <%= message %>
                  <% end %>
                </div>
              <% end %>

            </div>

            <!-- Password Field -->

            <div class="form-group">
              <label>Password</label>
              <%= f.password_field :password, class: "form-control", placeholder: "Enter password"%>

              <!-- Error message if password isn't valid -->

              <% if @user.errors.messages[:password].any? %>
                <div class='alert alert-danger' role='alert'>>
                  <% @user.errors.messages[:password].each do |message| %>
                    <%= message %>
                  <% end %>
                </div>
              <% end %>

            </div>

            <!-- Password Confirmation Field -->

            <div class="form-group">
              <label>Password Confirmation</label>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password again"%>

              <!-- Error message if password confirmation isn't valid -->

              <% if @user.errors.messages[:password_confirmation].any? %>
                <div class='alert alert-danger' role='alert'>>
                  <% @user.errors.messages[:password_confirmation].each do |message| %>
                    <%= message %>
                  <% end %>
                </div>
              <% end %>

            </div>
            
            <!-- Create account button -->

            <%= f.submit 'Create Account', class: "btn btn-success"%>

          <% end %>


    </div>
  </div>
</div>